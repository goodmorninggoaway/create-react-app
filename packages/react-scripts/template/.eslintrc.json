{
  "parser": "babel-eslint",

  "plugins": ["import", "jsx-a11y", "react"],
  "extends": ["eslint:recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/display-name": "off",
    "indent": ["error", 2]
  }
}
